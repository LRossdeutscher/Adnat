<h2> Edit User </h2>
<%= form_with model: @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
                <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :"Name:" %>
        <%= f.text_field :name %><br />
        <%= f.label :"Email:" %>
        <%= f.text_field :email_address%><br />
    </p>
    <p class="button"><%= f.submit "Update" %></p>
<%end%>
