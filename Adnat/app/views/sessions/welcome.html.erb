<p>You aren't a member of any organisations. <br /> Join an existing one or create a new one.</p>

<h2>Organisations</h2>
<ul>
    <% for organisation in Organisation.order(:name).all %>
        <li>
            <%= organisation.name %>
            <%= link_to "Edit", edit_organisation_path(:id => organisation.id) %>
            <%= link_to "Join", user_path(:id => organisation.id), :method => :put %>
        </li>
    <% end %>
</ul>


<h2>Create organisation</h2>
<%= form_with model: @organisation do |f| %>
    <% if @organisation.errors.any? %>
        <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
                <% for message in @organisation.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :"Name:" %>
        <%= f.text_field :name %><br />
        <%= f.label :"Hourly rate: $" %>
        <%= f.text_field :hourly_rate%><br />
    </p>
    <p class="button"><%= f.submit "Create and Join" %></p>
<%end%>
