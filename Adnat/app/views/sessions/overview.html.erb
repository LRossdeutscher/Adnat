<h2> <%= @organisation.name %> </h2>

<% if @organisation.errors.any? %>
    <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
            <% for message in @organisation.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= link_to "View Shifts", shifts_path %>
<%= link_to "Edit", edit_organisation_path(:id => @organisation.id) %>
<%= link_to "Leave", leave_organisation_path %>
